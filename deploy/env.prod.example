## UCM - PRODUCAO (EXEMPLO)
## No VPS, copie para um arquivo de env e aponte no docker compose:
##   docker compose --env-file ./deploy/.env -f ./deploy/docker-compose.prod.yml up -d --build
##
## (Recomendado) Crie: ./deploy/.env (NAO commitar)

# URL publica do site (HTTPS em produção)
# Durante setup inicial (antes de SSL): http://SEU_IP_PUBLICO
# Após configurar SSL: https://gtsofthub.com.br
FRONTEND_URL=https://gtsofthub.com.br

# Postgres (admin)
POSTGRES_PASSWORD=troque-esta-senha

# Postgres (usuario do app - NAO superuser, para RLS ser efetivo)
DB_APP_USER=ucm_app
DB_APP_PASSWORD=troque-esta-senha-do-app

# Database URL (usado pelo backend)
DATABASE_URL=postgresql://ucm_app:troque-esta-senha-do-app@postgres:5432/ucm

# Redis
REDIS_PASSWORD=troque-esta-senha-redis
REDIS_URL=redis://:troque-esta-senha-redis@redis:6379

# Segredos do backend
JWT_SECRET=troque-por-um-segredo-longo-64+chars
ENCRYPTION_KEY=troque-por-um-segredo-longo-64+chars
JWT_EXPIRATION=15m
WHATSAPP_DEFAULT_SHIPPING_AMOUNT=10

# Swagger (em producao, recomendado manter false; pode liberar apenas via localhost no nginx)
ENABLE_SWAGGER=false

# Multi-tenant e CSRF (producao)
ALLOW_TENANT_FROM_REQUEST=false
CSRF_ENABLED=false
CSRF_COOKIE_NAME=csrf-token
CSRF_HEADER_NAME=x-csrf-token
CSRF_SESSION_HEADER_NAME=x-csrf-session-token

# Pagamentos (Mercado Pago)
PAYMENT_PROVIDER=mercadopago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_URL=https://gtsofthub.com.br/api/v1/payments/webhook/mercadopago?token=change-me
MERCADOPAGO_WEBHOOK_TOKEN=change-me
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_WEBHOOK_ALLOW_UNSIGNED=false

# Pix (fallback)
PIX_KEY=
MERCHANT_NAME=Loja

# WhatsApp
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE=default

# OpenAI / Ollama
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=8000
OPENAI_ALLOW_NO_KEY=false

# Email
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM=noreply@gtsofthub.com.br

# CORS
CORS_ORIGINS=

# Backups offsite + alertas
BACKUP_DIR=/opt/ucm/backups
REMOTE=b2crypt:
OFFSITE_KEEP_DAYS=30
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

