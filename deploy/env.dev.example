## UCM - DEV (EXEMPLO)
## Use para dev/staging (ex.: dev.gtsofthub.com.br)
## No VPS, copie para ./deploy/.env dentro do repo de dev/test

# URL publica do site (dev)
FRONTEND_URL=https://dev.gtsofthub.com.br

# Postgres (admin)
POSTGRES_PASSWORD=troque-esta-senha

# Redis
REDIS_PASSWORD=troque-esta-senha-redis
REDIS_URL=redis://:troque-esta-senha-redis@redis:6379

# Database URL (dev compose usa este valor)
DATABASE_URL=postgresql://postgres:troque-esta-senha@postgres:5432/ucm

# Segredos do backend
JWT_SECRET=troque-por-um-segredo-longo-64+chars
ENCRYPTION_KEY=troque-por-um-segredo-longo-64+chars
JWT_EXPIRATION=15m
WHATSAPP_DEFAULT_SHIPPING_AMOUNT=10
ENABLE_SWAGGER=true

# Multi-tenant e CSRF (dev)
ALLOW_TENANT_FROM_REQUEST=true
CSRF_ENABLED=false
CSRF_COOKIE_NAME=csrf-token
CSRF_HEADER_NAME=x-csrf-token
CSRF_SESSION_HEADER_NAME=x-csrf-session-token

# Pagamentos (Mercado Pago - dev)
PAYMENT_PROVIDER=mercadopago
MERCADOPAGO_ACCESS_TOKEN=TEST-CHANGE-ME
MERCADOPAGO_PUBLIC_KEY=TEST-CHANGE-ME
MERCADOPAGO_WEBHOOK_URL=https://dev.gtsofthub.com.br/api/v1/payments/webhook/mercadopago?token=change-me
MERCADOPAGO_WEBHOOK_TOKEN=change-me
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_WEBHOOK_ALLOW_UNSIGNED=true

# Pix (mock fallback)
PIX_KEY=
MERCHANT_NAME=Loja

# WhatsApp
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE=default

# OpenAI / Ollama
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=8000
OPENAI_ALLOW_NO_KEY=false

# Email
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM=noreply@dev.gtsofthub.com.br

# CORS
CORS_ORIGINS=

# Dev seed (ambiente de desenvolvimento)
SEED_DEV_USER=true
SEED_DEV_USER_FORCE_RESET=true
DEV_TENANT_ID=00000000-0000-0000-0000-000000000000
DEV_USER_EMAIL=dev@gtsofthub.com.br
DEV_USER_PASSWORD=12345678
