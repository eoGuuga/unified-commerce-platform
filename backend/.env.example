# Application
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ucm

# Redis
REDIS_URL=
REDIS_TOKEN=

# JWT
JWT_SECRET=change-me
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=change-me
JWT_REFRESH_EXPIRATION=7d

# Multi-tenant and CSRF
ALLOW_TENANT_FROM_REQUEST=true
CSRF_ENABLED=false
CSRF_COOKIE_NAME=csrf-token
CSRF_HEADER_NAME=x-csrf-token
CSRF_SESSION_HEADER_NAME=x-csrf-session-token

# Payments (Mercado Pago)
PAYMENT_PROVIDER=mercadopago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_URL=https://your-domain.com/api/v1/payments/webhook

# Pix (mock fallback)
PIX_KEY=
MERCHANT_NAME=Loja

# WhatsApp
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE=default

# Email
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM=noreply@your-domain.com

# OpenAI or Ollama
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=8000
OPENAI_ALLOW_NO_KEY=false

# CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=
